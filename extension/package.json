{
  "name": "transcribe",
  "displayName": "Transcribe",
  "description": "One-click text export of your project file structure for AI tools",
  "publisher": "Pattuv",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Pattuv/Transcribe"
  },
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "transcribe.copyWholeStructure",
        "title": "Copy File Structure of Whole Project"
      },
      {
        "command": "transcribe.copySpecificStructure",
        "title": "Copy File Structure of This Folder"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "transcribe.copyWholeStructure",
          "when": "explorerViewletVisible",
          "group": "navigation"
        },
        {
          "command": "transcribe.copySpecificStructure",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.39.2",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
