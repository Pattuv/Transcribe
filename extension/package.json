{
  "name": "transcribe",
  "displayName": "Transcribe",
  "description": "One-click text export of your project file structure for AI tools",
  "publisher": "Pattuv",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Pattuv/Transcribe"
  },
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Transcribe Extension Settings",
      "properties": {
        "transcribe.ignoreDirs": {
          "type": "array",
          "default": [
            "node_modules",
            ".git",
            ".vscode",
            "dist",
            "build",
            "out",
            "__pycache__",
            ".venv"
          ],
          "description": "List of directory names to ignore when copying file structures. \n Edit the ignoreDirs array and list or remove the exact case-sensitive names of the directories you want to ignore or include (which are all listed in string format)."
        }
      }
    },
    "commands": [
      {
        "command": "transcribe.copyWholeStructure",
        "title": "Copy File Structure of Whole Project"
      },
      {
        "command": "transcribe.copySpecificStructure",
        "title": "Copy File Structure of This Folder"
      },
      {
        "command": "transcribe.editIgnoreSettings",
        "title": "Configure Ignored Paths for Transcribe"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "transcribe.copyWholeStructure",
          "when": "explorerViewletVisible",
          "group": "1_transcribe"
        },
        {
          "command": "transcribe.copySpecificStructure",
          "when": "explorerResourceIsFolder",
          "group": "1_transcribe"
        },
        {
          "command": "transcribe.editIgnoreSettings",
          "when": "explorerViewletVisible",
          "group": "1_transcribe.next"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.39.2",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
